{
  "manifest_version": 3,
  "name": "Amazon Info Plus",
  "version": "1.0.0",
  "description": "显示Amazon商品的产地、厂商和发货地信息",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.amazon.co.jp/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "js": ["dist/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 